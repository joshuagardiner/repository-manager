{
  "name": "repository-manager",
  "private": false,
  "version": "1.0.0",
  "description": "Manage GitHub repositories using Terraform",
  "repository": "https://github.com/joshuagardiner/terraform-repository-manager.git",
  "author": "Joshua Gardiner",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "terraform:apply": "cd terraform/github && terraform apply",
    "terraform:apply:refresh": "cd terraform/github && terraform apply -refresh-only",
    "terraform:format": "cd terraform/github && terraform fmt",
    "terraform:init": "cd terraform/github && terraform init",
    "terraform:plan": "cd terraform/github && terraform validate && terraform plan",
    "terraform:validate": "cd terraform/github && terraform validate"
  },
  "devDependencies": {
    "husky": "^7.0.4"
  }
}
